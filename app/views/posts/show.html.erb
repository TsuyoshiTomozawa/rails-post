<div class="row">
  <aside class="col-md-4">
    <section class="post_info">
      <h1>
        <%= @post.title %>
      </h1>
    </section>
    <section class="body">
      <%= @post.body %>
    </section>
  </aside>

  <% if current_user?(@post.user) %>
    <%= link_to '更新', post_path, data: { turbo_method: :delete } %>
    <%= link_to '削除', post_path, data: { turbo_method: :delete } %>
  <% end %>

</div>